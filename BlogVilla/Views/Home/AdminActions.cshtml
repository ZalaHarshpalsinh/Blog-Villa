@model List<AdminAction>

<div class="container mt-5">
    <h2 class="text-center">Admin Actions for @ViewBag.User.Username</h2>

    <div class="mt-4">
        @foreach (var action in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex">
                        <img src="@action.Admin.ProfilePhoto" class="rounded-circle" style="width: 50px; height: 50px;" alt="Admin's Avatar" />
                        <div class="ms-3">
                            <h5 class="mb-0">@action.Admin.Username</h5>
                            <small class="text-muted">@action.Admin.Email</small>
                        </div>
                    </div>

                    <p class="mt-3"><strong>Action:</strong> @action.ActionDescription</p>
                    <small class="text-muted">Action Date: @action.ActionDate.ToString("f")</small>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <p class="text-center">No actions taken by admin yet.</p>
        }
    </div>
</div>

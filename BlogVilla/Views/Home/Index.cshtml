@model string

@{
    ViewData["Title"] = "Welcome to Blogvilla";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Why BlogVilla?</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Share Your Thoughts</h5>
                    <p class="card-text">Express yourself and share your ideas with a community of writers.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Engage with Readers</h5>
                    <p class="card-text">Receive feedback and engage with your audience through comments and likes.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Join a Community</h5>
                    <p class="card-text">Become part of a growing community of bloggers and readers.</p>
                </div>
            </div>
        </div>
    </div>
</div>
